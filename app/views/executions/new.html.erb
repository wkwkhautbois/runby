<h1>プログラム 新規実行</h1>

<%= form_with(model: @execution) do |form| %>

  <%# エラー表示 %>
  <% if @execution.errors.any? %>
    <div id="error_explanation">
      <% @execution.errors.each do |error| %>
        <div class="alert alert-danger">
          <%= error.full_message %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :program, "ソースコード" %>
    <%= form.text_area :program,
                       class: "form-control text-monospace",
                       style: "min-height: 300px;",
                       placeholder: "ここにRubyプログラムを記述\nex) print \"hello world!\"" %>
  </div>

  <div class="form-group">
    <%= form.label :input, "入力" %>
    <%= form.text_area :input, class: "form-control text-monospace" %>
  </div>

  <div class="text-right">
    <%= form.submit class: "btn btn-primary", value: "実行する" %>
  </div>
<% end %>


<div class="pt-4">
  <%= link_to "戻る", executions_path, class: "btn btn-secondary" %>
</div>

