
<%= form_with(model: @execution) do |form| %>

  <div class="form-group">
    <%= form.label :program, "ソースコード" %>
    <%= form.text_area :program,
                       readonly: true,
                       class: "form-control text-monospace",
                       style: "min-height: 300px;" %>
  </div>

  <div class="form-group">
    <%= form.label :input, "入力" %>
    <%= form.text_area :input, readonly: true, class: "form-control text-monospace" %>
  </div>

  <div class="form-group">
    <div>
      <%= form.label :output, "実行結果" %>
      <span class="small">
        (<%= execution_result_to_string(@execution) %>@ <%= @execution.created_at.in_time_zone('Tokyo') %>)
      </span>
    </div>
    <%= form.text_area :output, readonly: true, class: "form-control text-monospace" %>
  </div>

<% end %>

<div class="pt-4">
  <%= link_to "戻る", executions_path, class: "btn btn-secondary"%>
</div>

